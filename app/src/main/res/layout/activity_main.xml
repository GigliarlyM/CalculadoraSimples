<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="70dp"
        android:layout_weight="4"
        android:paddingVertical="20dp"
        android:hint="0"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="38sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TableRow>

                <Button
                    android:id="@+id/limpa"
                    style="@style/btnStyle"
                    android:text="AC"
                    android:textColor="#8A60D5" />

                <Button
                    android:id="@+id/backspace"
                    style="@style/btnStyle"
                    android:text="BS"
                    android:textColor="#8A60D5" />

                <Button
                    android:id="@+id/porcentagem"
                    style="@style/btnStyle"
                    android:text="%"
                    android:textColor="#8A60D5" />

                <Button
                    android:id="@+id/divisao"
                    style="@style/btnStyle"
                    android:text="/"
                    android:textColor="#8A60D5" />

            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/alg7"
                    style="@style/btnStyle"
                    android:text="7"/>

                <Button
                    android:id="@+id/alg8"
                    style="@style/btnStyle"
                    android:text="8"/>

                <Button
                    android:id="@+id/alg9"
                    style="@style/btnStyle"
                    android:text="9"/>

                <Button
                    android:id="@+id/multiplicacao"
                    style="@style/btnStyle"
                    android:text="X"
                    android:textColor="#8A60D5" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/alg4"
                    style="@style/btnStyle"
                    android:text="4"/>

                <Button
                    android:id="@+id/alg5"
                    style="@style/btnStyle"
                    android:text="5"/>

                <Button
                    android:id="@+id/alg6"
                    style="@style/btnStyle"
                    android:text="6"/>

                <Button
                    android:id="@+id/subtracao"
                    style="@style/btnStyle"
                    android:text="-"
                    android:textColor="#8A60D5"
                    />

            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/alg1"
                    style="@style/btnStyle"
                    android:text="1"/>

                <Button
                    android:id="@+id/alg2"
                    style="@style/btnStyle"
                    android:text="2"/>

                <Button
                    android:id="@+id/alg3"
                    style="@style/btnStyle"
                    android:text="3"/>

                <Button
                    android:id="@+id/soma"
                    style="@style/btnStyle"
                    android:text="+"
                    android:textColor="#8A60D5" />
            </TableRow>

            <TableRow>
                <Button
                    android:layout_width="64dp"
                    android:layout_height="87dp"
                    style="@style/btnStyle"
                    android:background="@drawable/dragonzin"/>

                <Button
                    android:id="@+id/alg0"
                    style="@style/btnStyle"
                    android:text="0"/>

                <Button
                    android:id="@+id/virgula"
                    style="@style/btnStyle"
                    android:text=","/>

                <Button
                    android:id="@+id/igual"
                    style="@style/btnStyle"
                    android:text="="
                    android:backgroundTint="#8A60D5"/>
            </TableRow>

        </TableLayout>

    </RelativeLayout>


</LinearLayout>